{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src",
    "src/vite-env.d.ts",
    "src/App.tsx",
    "src/shared/utils/api.tsx",
    "src/features/auth/pages/LoginPage.tsx",
    "src/features/dashboard/components/BankAccount.tsx",
    "src/features/dashboard/components/BarsCashFlow.tsx",
    "src/features/dashboard/components/CashBag.tsx",
    "src/features/dashboard/components/CashFlow.tsx",
    "src/features/dashboard/components/FiltersDashboard.tsx",
    "src/features/auth/components/Auth.tsx",
    "src/shared/components/Menu.tsx",
    "src/shared/components/Background.tsx",
    "src/shared/components/Header.tsx"
  ]
}
